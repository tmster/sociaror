<h1>Listing news</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Summary</th>
    <th>Content</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.user.name %></td>
    <td><%= news.title %></td>
    <td><%= news.summary %></td>
    <td><%= news.content %></td>
    <td><%= news.status %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

