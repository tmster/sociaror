<% provide(:title, 'Newsy') %>
<div class="row row-offcanvas row-offcanvas-right">
      <div class="col-xs-12 col-sm-9">
      
<h1>Newsy</h1>
<%= will_paginate %>



<% @news.each do |news| %>
 <div class="page-header">
          <h3><%= link_to news.title, news_url(news) %></h3>
        </div>
        <div class="lead"><%= markdown news.summary %></div>
        <p>Napisane przez <%= link_to news.user.name, user_url(news.user) %>, dnia <%= time_tag news.created_at  ,datetime: news.created_at %>, napisano <%= link_to "#{news.comments.count} komentarzy", news_url(news) %></p>
<% end %>

<%= will_paginate %>

</div><!--/row-->


        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
          <%= render "menu" %>
        </div><!--/span-->
      </div>


